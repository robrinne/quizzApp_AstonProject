<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="quizzApp_AstonProject.Pages.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <SearchBar
                Placeholder="Rechercher un quizz ou un profil"
                VerticalOptions="Start"
                HorizontalOptions="Start">
            </SearchBar>
            <StackLayout
                Orientation="Vertical"
                Padding="40, 30, 0, 0"
                Spacing="40"
                IsVisible="true">
                <StackLayout
                    Orientation="Horizontal">
                    <Image 
                        Source="icon_coupe_72_72.png"/>
                    <Label 
                        Text="Réaliser un quizz"
                        VerticalOptions="Center"
                        Margin="30, 0, 0, 0"
                        FontSize="25"/>
                </StackLayout>
                <StackLayout
                    Orientation="Horizontal">
                    <Image 
                        Source="icon_coupe_72_72.png"/>
                    <Label 
                        Text="Créer un quizz"
                        VerticalOptions="Center"
                        Margin="30, 0, 0, 0"
                        FontSize="25"/>
                </StackLayout>
                <StackLayout
                    Orientation="Horizontal">
                    <Image 
                        Source="icon_coupe_72_72.png"/>
                    <Label 
                        Text="Classement"
                        VerticalOptions="Center"
                        Margin="30, 0, 0, 0"
                        FontSize="25"/>
                </StackLayout>
                <StackLayout
                    Orientation="Horizontal">
                    <Image 
                        Source="icon_coupe_72_72.png"/>
                    <Label 
                        Text="Expérience"
                        VerticalOptions="Center"
                        Margin="30, 0, 0, 0"
                        FontSize="25"/>
                </StackLayout>
                <StackLayout
                    Orientation="Horizontal">
                    <Image 
                        Source="icon_coupe_72_72.png"/>
                    <Label 
                        Text="Gérer l'accès à vos&#x0A;quizz"
                        VerticalOptions="Center"
                        Margin="30, 0, 0, 0"
                        FontSize="25"/>
                </StackLayout>
            </StackLayout>
            <ListView
                x:Name="Results"
                IsVisible="false">
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
